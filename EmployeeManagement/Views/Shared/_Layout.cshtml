<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* Sidebar default style */
        #sidebar-wrapper {
            width: 250px;
            min-height: 100vh;
            transition: all 0.3s;
            overflow: hidden;
        }

        /* Sidebar collapsed (only icons visible) */
        #wrapper.toggled #sidebar-wrapper {
            width: 60px;
        }

        /* Sidebar link styling */
        .list-group-item {
            padding: 12px 20px;
            font-size: 16px;
            display: flex;
            align-items: center;
            transition: all 0.3s;
        }

            /* Sidebar icons */
            .list-group-item i {
                width: 30px;
                text-align: center;
                margin-right: 10px;
                font-size: 18px;
            }

        /* Hide text when collapsed */
        #wrapper.toggled .list-group-item span {
            display: none;
        }

        /* Adjust content when sidebar is collapsed */
        #wrapper.toggled #page-content-wrapper {
            margin-left: 60px;
        }

        /* Sidebar hover effect when collapsed */
        #wrapper.toggled #sidebar-wrapper:hover {
            width: 250px;
        }

            /* Show text when hovering over collapsed sidebar */
            #wrapper.toggled #sidebar-wrapper:hover .list-group-item span {
                display: inline;
            }
    </style>

</head>
<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-dark border-end text-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 fs-4 fw-bold border-bottom">HRMS</div>
            <div class="list-group list-group-flush">
                <a asp-controller="Employee" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-users"></i> <span>Employees</span>
                </a>
                <a asp-controller="Department" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-building"></i> <span>Department</span>
                </a>
                <a asp-controller="Attendance" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-calendar-check"></i> <span>Attendance</span>
                </a>
                <a asp-controller="Payroll" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-wallet"></i> <span>Payroll</span>
                </a>
                <a asp-controller="Reports" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-chart-bar"></i> <span>Reports</span>
                </a>
                <a asp-controller="Account" asp-action="Logout" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
                </a>
            </div>
        </div>

        <!-- Page Content Wrapper -->
        <div id="page-content-wrapper" class="w-100">

            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <button class="btn btn-dark" id="sidebarToggle"><i class="fas fa-bars"></i></button>
                <div class="container-fluid">
                    <a class="navbar-brand ms-2" asp-controller="Home" asp-action="Index">Employee Management</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid px-4 py-3">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="border-top footer text-muted mt-auto">
                <div class="container text-center">
                    &copy; 2025 - EmployeeManagement - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });

        // Icon click to toggle sidebar
        document.querySelectorAll("#sidebar-wrapper .list-group-item i").forEach(icon => {
            icon.addEventListener("click", function () {
                document.getElementById("wrapper").classList.toggle("toggled");
            });
        });
    </script>

</body>
</html>
