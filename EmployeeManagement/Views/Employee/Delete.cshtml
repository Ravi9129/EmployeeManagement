@model EmployeeManagement.Models.Employee

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>

<div>
    <strong>First Name:</strong> @Model.FirstName <br />
    <strong>Email:</strong> @Model.EmailId <br />
    <strong>Mobile:</strong> @Model.MobileNumber <br />
    <strong>Department:</strong> @Model.Department <br />
    <strong>Designation:</strong> @Model.Designation <br />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
