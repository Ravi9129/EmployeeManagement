@model IEnumerable<EmployeeManagement.Models.Employee>

@* @{ *@
@*     ViewData[""] = "Employee"; *@
@* } *@

<h2 class="text-center mb-4">Employee List</h2>
<a asp-action="Create" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Add New Employee</a>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped w-100">
        <thead class="thead-dark">
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Salary</th>
                <th>City</th>
                <th>Address</th>
                <th>State</th>
                <th>Pincode</th>
                <th class="text-center" style="min-width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.EmpId</td>
                    <td>@emp.FirstName</td>
                    <td>@emp.MiddleName</td>
                    <td>@emp.LastName</td>
                    <td>@emp.EmailId</td>
                    <td>@emp.MobileNumber</td>
                    <td>@emp.Department</td>
                    <td>@emp.Designation</td>
                    <td>₹@emp.MonthlySalary.ToString("N2")</td>
                    <td>@emp.City</td>
                    <td>@emp.Address</td>
                    <td>@emp.State</td>
                    <td>@emp.Pincode</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@emp.ID" class="btn btn-info btn-sm mx-1">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@emp.ID" class="btn btn-warning btn-sm mx-1">
                            <i class="fas fa-pen"></i>
                        </a>
                        @* <a asp-action="Delete" asp-route-id="@emp.ID" class="btn btn-danger btn-sm mx-1"> *@
                        @*     <i class="fas fa-trash"></i> *@
                        @* </a> *@

                        <form asp-action="DeleteConfirmed" asp-route-id="@emp.ID" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Are you sure you want to delete this employee?');">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
