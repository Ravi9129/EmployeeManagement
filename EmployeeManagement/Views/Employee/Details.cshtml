@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2 class="text-center mb-4">Employee Details</h2>

<div class="card shadow p-4">
    <div class="card-body">
        <form>
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label"><strong>First Name:</strong></label>
                    <input type="text" class="form-control" value="@Model.FirstName" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><strong>Last Name:</strong></label>
                    <input type="text" class="form-control" value="@Model.LastName" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><strong>Email:</strong></label>
                    <input type="email" class="form-control" value="@Model.EmailId" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><strong>Mobile:</strong></label>
                    <input type="text" class="form-control" value="@Model.MobileNumber" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><strong>Department:</strong></label>
                    <input type="text" class="form-control" value="@Model.Department" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><strong>Designation:</strong></label>
                    <input type="text" class="form-control" value="@Model.Designation" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><strong>Monthly Salary:</strong></label>
                    <input type="text" class="form-control" value="$@Model.MonthlySalary.ToString("N2")" readonly>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><strong>City:</strong></label>
                    <input type="text" class="form-control" value="@Model.City" readonly>
                </div>
            </div>
            <div class="mt-4 text-center">
                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning me-2"><i class="fas fa-edit"></i> Edit</a>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
