@model EmployeeManagement.Models.Employee

<h2 class="text-center mb-4">Add New Employee</h2>

<form asp-controller="Employee" asp-action="Create" method="post" class="container">
    <div class="row">
        <!-- Personal Information Section -->
        <div class="col-md-4">
            <div class="card shadow p-3 mb-4">
                <h4 class="card-title text-center">Personal Information</h4>
                <div class="form-group">
                    <label asp-for="EmpId"></label>
                    <input asp-for="EmpId" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName"></label>
                    <input asp-for="MiddleName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EmailId"></label>
                    <input asp-for="EmailId" class="form-control" type="email" required />
                </div>
                <div class="form-group">
                    <label asp-for="MobileNumber"></label>
                    <input asp-for="MobileNumber" class="form-control" required />
                </div>
            </div>
        </div>

        <!-- Job Details Section -->
        <div class="col-md-4">
            <div class="card shadow p-3 mb-4">
                <h4 class="card-title text-center">Job Details</h4>
                <div class="form-group">
                    <label asp-for="Department"></label>
                    <input asp-for="Department" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Designation"></label>
                    <input asp-for="Designation" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MonthlySalary"></label>
                    <input asp-for="MonthlySalary" class="form-control" type="number" step="0.01" />
                </div>
            </div>
        </div>

        <!-- Address Details Section -->
        <div class="col-md-4">
            <div class="card shadow p-3 mb-4">
                <h4 class="card-title text-center">Address Details</h4>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="State"></label>
                    <input asp-for="State" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Pincode"></label>
                    <input asp-for="Pincode" class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <!-- Submit & Cancel Buttons -->
    <div class="text-center">
        <button type="submit" class="btn btn-success px-4">Save</button>
        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
    </div>
</form>
